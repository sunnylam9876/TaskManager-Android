<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item android:drawable="@android:color/white" />

    <!-- Border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#D6D6D6" /> <!-- Set border width and color -->
        </shape>
    </item>
</layer-list>