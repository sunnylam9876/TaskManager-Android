<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="Input Task Details"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittext"
                android:drawableStart="@drawable/baseline_event_note_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Task Title"
                android:inputType="text"
                android:padding="16dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"

                android:background="@drawable/background_edittext"
                android:focusable="false"
                android:outlineProvider="none"
                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp">

                <AutoCompleteTextView
                    android:id="@+id/tvAddMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/baseline_group_24"
                    android:drawablePadding="10dp"
                    android:hint="Team Member"
                    android:inputType="none"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/etTaskTitle3"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittext"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Target Date"
                android:inputType="text"
                android:padding="16dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittext"
                android:drawableStart="@drawable/baseline_edit_note_24"
                android:drawablePadding="10dp"
                android:ems="16"
                android:gravity="start|top"
                android:hint="Task Description"
                android:inputType="textMultiLine"
                android:padding="16dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="32dp"
                android:text="Submit"
                android:textSize="22sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>