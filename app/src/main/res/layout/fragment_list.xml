<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/Patient_Theme"
    tools:context=".ListFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPendingTaskTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Pending activities:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="55sp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/background_edittext"
                            android:drawableStart="@drawable/baseline_search_24"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="Search by activity"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/txtInputPatient"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="8dp"

                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="4"
                                    android:background="@drawable/background_edittext"
                                    android:focusable="false"
                                    android:outlineProvider="none"
                                    app:boxStrokeColor="@android:color/transparent"
                                    app:boxStrokeWidth="0dp">

                                        <AutoCompleteTextView
                                            android:id="@+id/tvHomePatientFilter"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:drawableStart="@drawable/baseline_group_24"
                                            android:drawablePadding="10dp"
                                            android:hint="Patient"
                                            android:inputType="none"
                                            android:padding="5dp"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/dark_grey"
                                            android:textSize="14sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"

                                    android:layout_weight="3"
                                    android:background="@drawable/background_edittext"
                                    android:focusable="false"
                                    android:outlineProvider="none"
                                    app:boxStrokeColor="@android:color/transparent"
                                    app:boxStrokeWidth="0dp">

                                        <AutoCompleteTextView
                                            android:id="@+id/tvCategoryFilter"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:drawableStart="@drawable/baseline_category_24"
                                            android:drawablePadding="10dp"
                                            android:hint="Category"
                                            android:inputType="none"
                                            android:padding="5dp"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/dark_grey"
                                            android:textSize="14sp"
                                            />
                                </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:src="@drawable/baseline_circle_appointment_24" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Appointment" />

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:src="@drawable/baseline_circle_medicine_24" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Medicine" />

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:src="@drawable/baseline_circle_workout_24" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Workout" />

                                <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:src="@drawable/baseline_circle_others_24" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Others" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                </LinearLayout>
        </ScrollView>


</FrameLayout>